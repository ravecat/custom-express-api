{
  "name": "custom-express-api",
  "description": "Boilerplate Express API",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prestart": "npm run -s build",
    "build": "babel src -s -D -d dist",
    "start": "NODE_ENV=prod node dist",
    "dev": "NODE_ENV=dev nodemon -w src --exec \"babel-node src\"",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "yarn lint --fix",
    "test": "NODE_ENV=test mocha --opts .mocharc",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.12.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix",
      "yarn test",
      "git add"
    ]
  }
}
